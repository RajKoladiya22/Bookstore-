<center>
    <h1>Edit User</h1>
    <form method="post" action="/updateRecord" enctype="multipart/form-data">
        
        <table border="1">
            <input type="hidden" name="editid" value="<%= single.id %>"
            <tr>
                <td>Book Name :- </td>
                <td><input type="text" name="name" value="<%= single.name %>"></td>
            </tr>
            <tr>
                <td>Book Price :- </td>
                <td><input type="text" name="email" value="<%= single.price %>"></td>
            </tr>
            <tr>
                <td>Book Pages:- </td>
                <td>
                    <input type="radio" <% if(single.page === "One hundred" ) { %> checked <% } %> name="page" value="One hundred">100
                    <input type="radio" <% if(single.page === "Two hundred" ) { %> checked <% } %> name="page" value="Two hundred">200
                    <input type="radio" <% if(single.page === "Three hundred" ) { %> checked <% } %> name="page" value="Three hundred">300
                </td>
            </tr>
            
            
            <tr>
                <td>Bool Author :- </td>
                <td>
                    <input type="text" name="phone" value="<%= single.author %>">
                </td>
            </tr>
            <tr>
                <td>File Upload :- </td>
                <td>
                    <input type="file" name="avatar">
                    <img src="<%= single.image %>" width="50"/>
                </td>
            </tr>
            <tr>
                <td></td>
                <td>
                    <input type="submit" value="submit">
                </td>
            </tr>
        </table>
    </form>
    <a href="/">View</a>
</center>
